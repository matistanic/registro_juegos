<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rule_text %>
    <%= form.text_field :rule_text %>
  </div>

  <div class="field">
    <%= form.label :pdf_Rules %>
    <%= form.file_field :rules_pdf %>
  </div>

  <div class="field">
    <%= form.label :box_image %>
    <%= form.file_field :box_image %>
  </div>

  <div class="field">
    <%= form.label :components %>
    <%= form.file_field :components, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
